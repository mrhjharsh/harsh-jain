   Button b0,b1,b2,b3,b4,b5,b6,b7,b8,b9,add,sub,mul,clear,div,eq,mod,negative,col;
  TextField tf;
    String s1, s2 ,s3,s4,s5,z;
    int a =0,b=0,c=0 ,d=0;
    frame(){
b0 = new Button("0");
        b1 = new Button("1");
        b2 = new Button("2");
        Color c = new Color(93, 108, 119);
