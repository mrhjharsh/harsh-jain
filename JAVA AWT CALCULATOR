    @Override
    public void actionPerformed(ActionEvent e) {
        if(e.getSource() == col){
            setBackground(Color.GRAY);
        }
     if(e.getSource() == b0){

         s2 =tf.getText();
         s1 ="0";
         s3= s2 + s1;
         tf.setText(s3);
         c=1;
     }
        if(e.getSource() == b1){
            s2 =tf.getText();
            s1 ="1";
            s3= s2 + s1;
            tf.setText(s3);

        }
        if(e.getSource() == b2){
            s2 =tf.getText();
            s1 ="2";
            s3= s2 + s1;
            tf.setText(s3);

        }
        if(e.getSource() == b3){
            s2 =tf.getText();
            s1 ="3";
            s3= s2 + s1;
            tf.setText(s3);

        }
        if(e.getSource() == b4){
            s2 =tf.getText();
            s1 ="4";
            s3= s2 + s1;
            tf.setText(s3);

        }

        if(e.getSource() == b5){
            s2 =tf.getText();
            s1 ="5";
            s3= s2 + s1;
            tf.setText(s3);

        } if(e.getSource() == b6){
            s2 =tf.getText();
            s1 ="6";
            s3= s2 + s1;
            tf.setText(s3);

        } if(e.getSource() == b7){
            s2 =tf.getText();
            s1 ="7";
            s3= s2 + s1;
            tf.setText(s3);


        }
        if(e.getSource() == b8){
            s2 =tf.getText();
            s1 ="8";
            s3= s2 + s1;
            tf.setText(s3);

        } if(e.getSource() == b9){

            s2 =tf.getText();
            s1 ="9";
            s3= s2 + s1;
            tf.setText(s3);

        }
        if(e.getSource() == add){
            a = Integer.parseInt(tf.getText());
             z = "";
tf.setText(z);
            c=1;
        }
        if(e.getSource() == sub){
            a = Integer.parseInt(tf.getText());
            z = "";
            tf.setText(z);
            c=2;
        }
        if(e.getSource() == mul){
            a = Integer.parseInt(tf.getText());
            z = "";
            tf.setText(z);
            c=3;
        }
        if(e.getSource() == div){
            a = Integer.parseInt(tf.getText());
            z = "";
            tf.setText(z);
            c=4;
        }
        if(e.getSource() == mod){
            a = Integer.parseInt(tf.getText());
            z = "";
            tf.setText(z);
            c=5;
        }
        if(e.getSource() == negative){
            a = Integer.parseInt(tf.getText());
            z = "";
            d = a - 2*a;
            tf.setText(Integer.toString(d));
            c=6;
        }
        if(e.getSource() == clear){
           a=0;
           b=0;
           d=0;
           tf.setText("");
        }

        if(e.getSource() == eq) {

            if (c==1) {
                b = Integer.parseInt(tf.getText());
                d = a + b;
                tf.setText(Integer.toString(d));
            }
            if (c==2) {
                b = Integer.parseInt(tf.getText());
                d = a - b;
                tf.setText(Integer.toString(d));
            }
            if (c==3) {
                b = Integer.parseInt(tf.getText());
                d = a * b;
                tf.setText(Integer.toString(d));
            }
            if (c==4) {
                b = Integer.parseInt(tf.getText());
                d = a / b;
                tf.setText(Integer.toString(d));
            }
            if (c==5) {
                b = Integer.parseInt(tf.getText());
                d = a % b;
                tf.setText(Integer.toString(d));
            }



        }



    }

